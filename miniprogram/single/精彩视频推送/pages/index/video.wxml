<wxs module="helper" src="../../common/helper.wxs"></wxs>
<import src="../../common/template.wxml" />
<template is="overload" data="{{overload}}" />
<template is="dialogView" data="{{dialogView}}" />
<view class="video-index">
    <view class="video">
        <txv-video wx:if="{{video.tencentvideo && video.vid}}" playerid="{{video.vid}}" width="100%" height="100%" vid="{{video.vid}}" autoplay="{{rewardedad.enable==0}}" bindtimeupdate="timeupdate">
            <view class="slot" bindtap="showVideoAd" wx:if="{{rewardedad.enable==1 && !isShownAd}}"><text>点此观看广告后可播放视频</text></view>
        </txv-video>
        <block wx:else>
        <video wx:if="{{wxVideoAd.enable==1}}" id="player" src="{{video.url}}" poster="{{video.img}}" autoplay="{{rewardedad.enable==0}}" controls="true" bindtimeupdate="timeupdate" unit-id="{{wxVideoAd.adunit}}">
            <view class="slot" bindtap="showVideoAd" wx:if="{{rewardedad.enable==1 && !isShownAd}}"><text>点此观看广告后可播放视频</text></view>
        </video>
        <video wx:else id="player" src="{{video.url}}" poster="{{video.img}}" autoplay="{{rewardedad.enable==0}}" controls="true" bindtimeupdate="timeupdate">
            <view class="slot" bindtap="showVideoAd" wx:if="{{rewardedad.enable==1 && !isShownAd}}"><text>点此观看广告后可播放视频</text></view>
        </video>
        </block>
    </view>
</view>