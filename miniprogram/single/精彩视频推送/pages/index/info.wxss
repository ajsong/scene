.info-index .ul .email .shadow > view input{width:100%; height:100%; color:#171C36; border:none; background-color:transparent;}
.info-index .ul .email .shadow > text:nth-child(3){margin-top:46rpx;}
.info-index .ul .email .shadow > view:nth-child(4){margin-top:46rpx;}
.info-index .ul .email .shadow > text:nth-child(5){margin-top:46rpx;}

.info-index .footer{background:#101324; box-sizing:border-box; text-align:left; font-size:37rpx; padding:46rpx; color:#777;}
.info-index .footer text{display:block; font-size:46rpx; color:#fff;}
.info-index .footer label{font-weight:700;}