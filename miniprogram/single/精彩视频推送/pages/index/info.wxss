.info-index .header{position:relative; width:100%; height:257rpx; background:url(https://img.meke8.com/uploads/article/2020/08/27/20082711015078509.jpg) no-repeat center center; background-size:cover;}
.info-index .header .shadow{position:absolute; left:0; right:0; top:0; bottom:0; z-index:1; padding:60rpx 46rpx 0 0; font-size:46rpx; color:#fff; font-weight:700; text-align:right; background:rgba(0, 3, 6, 0.3);}
.info-index .header .shadow text{display:block; font-size:37rpx; color:#F7BD18;}

.info-index .ul .li{box-sizing:border-box; text-align:left; font-size:46rpx; padding:70rpx 46rpx;}
.info-index .ul .li:nth-child(2n){background:#F6F7F8;}
.info-index .ul .li text{display:block; font-size:37rpx; color:#00818a; font-weight:700;}
.info-index .ul .li label{font-weight:700;}
.info-index .ul .li > view{font-size:37rpx; color:#777; margin-top:46rpx;}
.info-index .ul .li .grid{height:auto; overflow:hidden; margin-bottom:-46rpx;}
.info-index .ul .li .grid view{float:left; margin-right:46rpx; margin-bottom:46rpx; width:calc((100% - 46rpx) / 2); box-sizing:border-box; background:#fff; border-radius:16rpx; border:2rpx solid #DFDEED; text-align:left; font-size:37rpx; padding:46rpx;}
.info-index .ul .li .grid2 view{border:none; margin-bottom:0; padding:46rpx 0;}
.info-index .ul .li .grid view:nth-child(2n){margin-right:0;}
.info-index .ul .li .grid view text{color:#171C36; font-weight:700;}

.info-index .ul .email{position:relative; width:100%; height:796rpx; font-weight:400; background:url(https://img.shuyi88.cn/uploads/article/2020/08/27/20082714461812183.jpg) no-repeat center center; background-attachment:fixed; background-size:cover;}
.info-index .ul .email .shadow{position:absolute; left:0; right:0; top:0; bottom:0; z-index:1; padding:70rpx 46rpx; font-size:37rpx; color:#fff; font-weight:700; text-align:left; background:rgba(0, 3, 6, 0.5);}
.info-index .ul .email .shadow > text{display:block;}
.info-index .ul .email .shadow > label{display:block; font-size:46rpx; font-weight:400;}
.info-index .ul .email .shadow > label text{font-weight:700;}
.info-index .ul .email .shadow > view{height:117rpx; box-sizing:border-box; background:#fff; padding:0 117rpx 0 35rpx; border-radius:16rpx; overflow:hidden;}
